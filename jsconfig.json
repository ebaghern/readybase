{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "context/*": ["./src/context/*"],
      "data/*": ["./src/data/*"],
      "pages/*": ["./src/pages/*"],
      "styles/*": ["./src/styles/*"],
      "static/*": ["./src/static/*"],
      "images/*": ["./src/static/images/*"],
      "lib/*": ["./src/lib/*"]
    }
  },
  "exclude": ["node_modules", "public"]
}
